</style>
<script>
    const texts = [
        'Meh!üòº',
        'Meowww?',
        'Meow  ò·ÜΩ ò',
        '(ÀÉ·Ü∫ÀÇ)',
        'Purrr~ üòª',
        'Hiss! >.<',
        'Nya! üêæ',
        'Zzz... üò∏',
        'Rawr! üê±',
        'Mlem! üêà‚ÄçüëÖ',
    ];
    const span = document.getElementById('meh-text');
    if (span === null) {
        throw new Error('Span "Meh" element not found');
    }
    const group = span.closest('.group');
    if (group === null) {
        throw new Error('Group "Meh" element not found');
    }
    let shuffledTexts = [...texts].sort(() => Math.random() - 0.5);
    let currentIndex = 0;
    let lastShown: string | null = null;

    group.addEventListener('mouseenter', () => {
        if (currentIndex >= shuffledTexts.length) {
            let newShuffled = [...texts].sort(() => Math.random() - 0.5);
            if (newShuffled[0] === lastShown && texts.length > 1) {
                let swapIdx = Math.floor(Math.random() * (newShuffled.length - 1)) + 1;
                [newShuffled[0], newShuffled[swapIdx]] = [newShuffled[swapIdx], newShuffled[0]];
            }
            shuffledTexts = newShuffled;
            currentIndex = 0;
        }
        span.textContent = shuffledTexts[currentIndex];
        lastShown = shuffledTexts[currentIndex];
        currentIndex++;
    });
</script>
