---
interface Props {
    title: string;
    company: string;
    time: string;
    description: string;
    techs: string[];
    url: string;
}

const { title, company, time, description, techs, url } = Astro.props;
---

<a href={url} class="block group" target="_blank" rel="noopener noreferrer">
    <div
        class="relative p-6 md:p-8 rounded-2xl bg-gradient-to-br from-purple-900/20 to-pink-900/20 border border-purple-500/30 hover:border-pink-500/50 hover:shadow-2xl hover:shadow-purple-500/20 transition-all duration-300 hover:-translate-y-1 backdrop-blur-sm"
    >
        <div class="flex flex-col lg:flex-row lg:items-start lg:justify-between gap-4 mb-4">
            <div class="flex-1">
                <h3
                    class="text-xl md:text-2xl bg-gradient-to-r from-purple-400 to-pink-400 bg-clip-text text-transparent mb-2 group-hover:from-fuchsia-400 group-hover:to-rose-400 transition-all duration-300"
                >
                    {title}
                </h3>
                <p class="text-gray-300 text-lg group-hover:text-white transition-colors duration-300">
                    {company}
                </p>
            </div>

            <span
                class="px-4 py-2 bg-gradient-to-r from-purple-500 to-pink-500 rounded-full text-sm text-white shadow-lg whitespace-nowrap"
            >
                {time}
            </span>
        </div>

        <div class="prose prose-invert prose-purple text-gray-400 mb-6" set:html={description} />

        <div class="flex flex-wrap gap-2">
            {
                techs.map((tech) => (
                    <span class="px-4 py-2 bg-gradient-to-r from-purple-500/40 to-pink-500/40 rounded-xl text-sm text-white border border-purple-400/40 hover:border-purple-400/60 transition-colors">
                        {tech}
                    </span>
                ))
            }
        </div>

        <div class="absolute top-4 right-4 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
            <svg class="w-5 h-5 text-pink-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
            </svg>
        </div>
    </div>
</a>

<style>
    .prose :global(p) {
        margin-bottom: 0.75rem;
        line-height: 1.6;
    }

    .prose :global(ul) {
        margin: 0.5rem 0;
        padding-left: 1.5rem;
        list-style: none;
    }

    .prose :global(li) {
        margin-bottom: 0.5rem;
        position: relative;
    }

    .prose :global(li::before) {
        content: 'â–¸';
        color: #ec4899;
        position: absolute;
        left: -1.5rem;
        font-weight: bold;
    }
</style>
