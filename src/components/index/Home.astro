<script>
    import Typed from 'typed.js';
    import type { TypedOptions } from 'typed.js';
    document.addEventListener('DOMContentLoaded', () => {
        // 1. Cast the target element
        const container = document.getElementById('typed-container');
        if (!container) return;
        const typedEl = document.querySelector('#typed-text') as HTMLElement | null;
        const parentEl = typedEl?.parentElement as HTMLElement | null;
        if (!typedEl) {
            console.warn('Typed target element not found');
            return;
        }
        const strings = JSON.parse(container.getAttribute('data-strings') || '[]');
        const options: TypedOptions = {
            strings,
            typeSpeed: 50,
            backSpeed: 30,
            backDelay: 1500,
            startDelay: 2050,
            loop: true,
            cursorChar: '|',
            contentType: 'html',
            // 3. Typed.js hook with typed parameters
            preStringTyped: (arrayPos: number, self: Typed) => {
                if (!parentEl) return;
                parentEl.style.transform = 'translateX(2px)';
                setTimeout(() => {
                    parentEl.style.transform = 'translateX(0)';
                }, 100);
            },
        };
        // 4. Instantiate Typed
        new Typed(typedEl, options);
    });
</script>
<style>
    @keyframes glow {
        0%,
        100% {
            text-shadow: 0 0 20px rgba(168, 85, 247, 0.5);
        }
        50% {
            text-shadow:
                0 0 30px rgba(168, 85, 247, 0.8),
                0 0 40px rgba(168, 85, 247, 0.6);
        }
    }
    .animate-glow {
        animation: glow 3s ease-in-out infinite;
    }
    /* Purple gradient text effect */
    .gradient-text {
        background: linear-gradient(135deg, #a855f7, #ec4899);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }
    /* Typing cursor enhancement */
    .typed-cursor {
        color: #a855f7;
        animation: blink 1s infinite;
    }
    @keyframes blink {
        0%,
        50% {
            opacity: 1;
        }
        51%,
        100% {
            opacity: 0;
        }
    }
    /* Responsive improvements */
    @media (max-width: 768px) {
        .mobile-center {
            text-align: center;
        }
    }
    span .text-purple-400 {
        display: inline;
        white-space: nowrap;
    }
</style>
