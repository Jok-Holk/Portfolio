---
const { translations, currentLang } = Astro.props;
---

<section id="home" class="text-gray-300 body-font flex items-center font-mono">
    <div class="container px-4 sm:px-6 md:px-8 lg:px-12 xl:px-20 my-12 sm:my-16 md:my-24 lg:my-32 mx-auto">
        <div class="flex flex-col lg:flex-row items-start gap-8 lg:gap-12 xl:gap-16">
            <!-- Text Content -->
            <div class="w-full lg:w-1/2 text-left mobile-center lg:text-left">
                <!-- Main Heading -->
                <h1
                    class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl xl:text-7xl text-white mb-2 sm:mb-4 font-mono hover-lift"
                    data-animate
                    data-direction="top"
                >
                    {translations?.home?.hello}
                </h1>
                <h1
                    class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl xl:text-7xl text-white mb-6 sm:mb-8 md:mb-12 font-mono hover-lift"
                    data-animate
                    data-direction="left"
                >
                    {translations?.home?.Iam}
                    <span class="gradient-text animate-glow font-mono rounded-2xl px-1">
                        {translations?.home?.name}
                    </span>
                </h1>
                <!-- Typed Text -->
                <h2
                    class="text-lg sm:text-xl md:text-2xl lg:text-3xl mb-4 sm:mb-6 font-mono text-gray-400 min-h-10 sm:min-h-12 lg:min-h-16"
                    data-animate
                    data-direction="left"
                    id="typed-container"
                    data-strings={JSON.stringify(translations?.home?.['type-strings'] || [])}
                >
                    <span class="gradient-text hidden sm:inline">&gt;</span>
                    <span id="typed-text"></span>
                </h2>
                <!-- Description -->
                <h3
                    class="text-sm sm:text-base lg:text-lg xl:text-xl mb-4 sm:mb-6 font-mono text-gray-400 leading-relaxed max-w-2xl"
                    data-animate
                >
                    {translations?.home?.['description-0']}{' '}
                    <span class="gradient-text transition-colors"> {translations?.home?.['description-1']}</span>{' '}
                    {translations?.home?.['description-2']}{' '}
                    <span class="gradient-text transition-colors"> {translations?.home?.['description-3']}</span>,{' '}
                    {translations?.home?.['description-4']}{' '}
                    <span class="gradient-text transition-colors"> {translations?.home?.['description-5']}</span>,{' '}
                    <span class="gradient-text transition-colors"> {translations?.home?.['description-6']}</span>,{
                        ' '
                    }and{' '}
                    <span class="gradient-text transition-colors"> {translations?.home?.['description-7']}</span>,{' '}
                    {translations?.home?.['description-8']}{' '}
                    <span class="gradient-text transition-colors"> {translations?.home?.['description-9']}</span>.
                </h3>
                <!-- Download CV Button -->
                <div class="mt-6 sm:mt-8" data-animate>
                    <a
                        href={`/api/download-cv/${currentLang}`}
                        download="resume.pdf"
                        class="group/btn inline-flex items-center gap-3 relative overflow-hidden bg-linear-to-r from-purple-600 via-pink-600 to-purple-600 hover:from-purple-500 hover:via-pink-500 hover:to-purple-500 px-6 sm:px-8 py-3 sm:py-4 rounded-2xl text-sm sm:text-base font-medium transition-all duration-300 hover:scale-105 hover:shadow-2xl hover:shadow-purple-500/50 animate-gradient bg-size-[200%_auto]"
                    >
                        <span class="relative z-10 flex items-center gap-3 text-white font-mono">
                            <svg
                                class="w-5 h-5 sm:w-6 sm:h-6 group-hover/btn:animate-bounce"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
                                ></path>
                            </svg>
                            {translations?.home?.downloadCV}
                        </span>
                        <div
                            class="absolute inset-0 bg-white/20 translate-y-full group-hover/btn:translate-y-0 transition-transform duration-300"
                        >
                        </div>
                    </a>
                </div>
            </div>
            <!-- Personal Image -->
            <div class="w-full lg:w-1/2 flex justify-center" data-animate data-direction="right">
                <div class="relative group max-w-xs sm:max-w-sm md:max-w-md lg:max-w-lg">
                    <!-- Thêm max-w responsive -->
                    <!-- Glow Effect Background -->
                    <div
                        class="absolute inset-0 bg-linear-to-r from-purple-600 to-pink-600 rounded-3xl blur-xl opacity-50 group-hover:opacity-75 transition-opacity duration-500 -z-10"
                    >
                        <!-- -z-10 để glow không che -->
                    </div>
                    <!-- Card Container -->
                    <div
                        class="relative bg-[#0a0e1a] rounded-3xl p-1 border border-purple-500/20 hover:border-purple-500/40 transition-all duration-500"
                    >
                        <!-- Image Container -->
                        <div class="relative overflow-hidden rounded-3xl">
                            <img
                                src="Image0.webp"
                                alt="Jok Holk - Software Developer"
                                class="w-full h-auto block transform group-hover:scale-105 transition-transform duration-700 rounded-3xl"
                            />
                            <!-- Overlay Info - appears on hover (giữ nguyên) -->
                            <div
                                class="absolute inset-0 bg-linear-to-t from-[#090d17] via-[#090d17]/95 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500 flex flex-col justify-end p-6 sm:p-8"
                            >
                                <div
                                    class="transform translate-y-4 group-hover:translate-y-0 transition-transform duration-500 delay-100"
                                >
                                    <h2 class="text-white font-bold text-xl sm:text-2xl mb-2 font-mono">
                                        {translations?.home?.OverlayName}
                                    </h2>
                                    <p class="text-gray-300 text-sm sm:text-base mb-4">
                                        {translations?.home?.OverlayTitle}<br />
                                        <span class="gradient-text">{translations?.home?.OverlayFocus}</span>
                                    </p>
                                    <!-- Social Buttons (giữ nguyên) -->
                                    <div class="flex gap-3">
                                        <a
                                            href="https://github.com/Jok-Holk"
                                            target="_blank"
                                            class="group/btn flex-1 relative overflow-hidden bg-linear-to-br from-purple-600 to-purple-700 hover:from-purple-500 hover:to-purple-600 px-4 py-2.5 rounded-xl text-sm font-medium transition-all duration-300 hover:scale-105 hover:shadow-lg hover:shadow-purple-500/50 text-center"
                                        >
                                            <span class="relative z-10 flex items-center justify-center gap-2">
                                                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                                                    <path
