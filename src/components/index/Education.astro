---
const { translations, currentLang } = Astro.props;
---

<section id="education" class="text-gray-300 font-mono my-16 sm:my-20 md:my-32 lg:my-40">
    <div class="container px-4 sm:px-6 md:px-8 lg:px-12 xl:px-20 my-12 sm:my-16 md:my-24 lg:my-32 mx-auto">
        <div class="flex items-center gap-4 mb-12 md:mb-16" data-animate data-direction="top">
            <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="2"
                stroke="url(#gradient)"
                class="w-10 h-10 md:w-12 md:h-12"
            >
                <defs>
                    <linearGradient id="gradient" x1="0%" y1="0%" x2="100%" y2="100%">
                        <stop offset="0%" style="stop-color:#a855f7;stop-opacity:1"></stop>
                        <stop offset="100%" style="stop-color:#ec4899;stop-opacity:1"></stop>
                    </linearGradient>
                </defs>
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M4.26 10.147a60.438 60.438 0 0 0-.491 6.347A48.62 48.62 0 0 1 12 20.904a48.62 48.62 0 0 1 8.232-4.41 60.46 60.46 0 0 0-.491-6.347m-15.482 0a50.636 50.636 0 0 0-2.658-.813A59.906 59.906 0 0 1 12 3.493a59.903 59.903 0 0 1 10.399 5.84c-.896.248-1.783.52-2.658.814m-15.482 0A50.717 50.717 0 0 1 12 13.489a50.702 50.702 0 0 1 7.74-3.342M6.75 15a.75.75 0 1 0 0-1.5.75.75 0 0 0 0 1.5Zm0 0v-3.675A55.378 55.378 0 0 1 12 8.443m-7.007 11.55A5.981 5.981 0 0 0 6.75 15.75v-1.5"
                ></path>
            </svg>
            <h1 class="text-3xl sm:text-4xl md:text-5xl text-white">
                {translations?.education?.title}
            </h1>
        </div>

        <div class="relative">
            <div
                class="absolute left-8 md:left-12 top-0 bottom-0 w-0.5 bg-linear-to-b from-purple-500 via-pink-500 to-purple-500"
            >
            </div>

            <div class="space-y-12 md:space-y-16">
                <a href="https://funix.edu.vn/" target="_blank" rel="noopener noreferrer" class="block group">
                    <div class="relative pl-20 md:pl-28">
                        <div
                            class="absolute left-4 md:left-8 top-0 w-9 h-9 rounded-full bg-linear-to-br from-purple-500 to-pink-500 flex items-center justify-center shadow-lg shadow-purple-500/50 group-hover:shadow-purple-500/80 group-hover:scale-110 transition-all duration-300"
                        >
                            <div class="w-4 h-4 rounded-full bg-white"></div>
                        </div>

                        <div
                            class="bg-linear-to-br from-purple-900/30 to-pink-900/30 rounded-2xl p-6 md:p-8 border border-purple-500/30 group-hover:border-pink-500/50 group-hover:shadow-2xl group-hover:shadow-purple-500/20 transition-all duration-500 group-hover:-translate-y-2 backdrop-blur-sm"
                        >
                            <div class="flex flex-wrap items-center gap-3 mb-4">
                                <span
                                    class="px-4 py-1.5 bg-linear-to-r from-purple-500 to-pink-500 rounded-full text-sm font-medium text-white shadow-lg"
                                >
                                    {translations?.education?.items[0]?.dates}
                                </span>
                                <span
                                    class="px-4 py-1.5 bg-purple-500/30 rounded-full text-xs font-semibold text-purple-200 border border-purple-400/50"
                                >
                                    {translations?.education?.items[0]?.status}
                                </span>
                            </div>

                            <h3
                                class="text-2xl md:text-3xl font-bold bg-linear-to-r from-purple-400 to-pink-400 bg-clip-text text-transparent mb-3 group-hover:from-fuchsia-400 group-hover:to-rose-400 transition-all duration-300"
                            >
                                {translations?.education?.items[0]?.institution}
                            </h3>

                            <p class="text-gray-300 text-lg mb-6 leading-relaxed">
                                {translations?.education?.items[0]?.program}
                            </p>

                            <div class="flex flex-wrap gap-3">
                                <span
                                    class="px-4 py-2 bg-linear-to-r from-purple-500/40 to-pink-500/40 rounded-xl text-sm font-medium text-white border border-purple-400/40 hover:border-purple-400/60 transition-colors"
                                >
                                    üéì {translations?.education?.items[0]?.details[0]}
                                </span>
                                <span
                                    class="px-4 py-2 bg-linear-to-r from-pink-500/40 to-purple-500/40 rounded-xl text-sm font-medium text-white border border-pink-400/40 hover:border-pink-400/60 transition-colors"
                                >
                                    üíª {translations?.education?.items[0]?.details[1]}
                                </span>
                            </div>
                        </div>
                    </div>
                </a>

                <a href="https://caodang.fpt.edu.vn/" target="_blank" rel="noopener noreferrer" class="block group">
                    <div class="relative pl-20 md:pl-28">
                        <div
                            class="absolute left-4 md:left-8 top-0 w-9 h-9 rounded-full bg-linear-to-br from-purple-500 to-pink-500 flex items-center justify-center shadow-lg shadow-pink-500/50 group-hover:shadow-pink-500/80 group-hover:scale-110 transition-all duration-300"
                        >
                            <div class="w-4 h-4 rounded-full bg-white"></div>
                        </div>

                        <div
                            class="bg-linear-to-br from-pink-900/30 to-purple-900/30 rounded-2xl p-6 md:p-8 border border-pink-500/30 group-hover:border-purple-500/50 group-hover:shadow-2xl group-hover:shadow-pink-500/20 transition-all duration-500 group-hover:-translate-y-2 backdrop-blur-sm"
                        >
                            <div class="flex flex-wrap items-center gap-3 mb-4">
                                <span
                                    class="px-4 py-1.5 bg-linear-to-r from-pink-500 to-purple-500 rounded-full text-sm font-medium text-white shadow-lg"
                                >
                                    {translations?.education?.items[1]?.dates}
                                </span>
                                <span
                                    class="px-4 py-1.5 bg-green-500/30 rounded-full text-xs font-semibold text-green-200 border border-green-400/50"
                                >
                                    {translations?.education?.items[1]?.status}
                                </span>
                            </div>

                            <h3
                                class="text-2xl md:text-3xl font-bold bg-linear-to-r from-pink-400 to-purple-400 bg-clip-text text-transparent mb-3 group-hover:from-rose-400 group-hover:to-fuchsia-400 transition-all duration-300"
                            >
                                {translations?.education?.items[1]?.institution}
                            </h3>

                            <p class="text-gray-300 text-lg mb-6 leading-relaxed">
                                {translations?.education?.items[1]?.program}
                            </p>

                            <div class="flex flex-wrap gap-3">
                                <span
                                    class="px-4 py-2 bg-linear-to-r from-green-500/40 to-emerald-500/40 rounded-xl text-sm font-medium text-white border border-green-400/40 hover:border-green-400/60 transition-colors"
                                >
                                    üéÆ {translations?.education?.items[1]?.details[0]}
                                </span>
                                <span
                                    class="px-4 py-2 bg-linear-to-r from-orange-500/40 to-amber-500/40 rounded-xl text-sm font-medium text-white border border-orange-400/40 hover:border-orange-400/60 transition-colors"
                                >
                                    üè´ {translations?.education?.items[1]?.details[1]}
                                </span>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </div>
</section>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const observer = new IntersectionObserver(
            (entries) => {
                entries.forEach((entry) => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('animate-visible');
                    }
                });
            },
            { threshold: 0.1, rootMargin: '0px 0px -100px 0px' },
        );

        document.querySelectorAll('.education-item').forEach((item) => observer.observe(item));
    });
</script>

<style>
    html,
    body {
        -webkit-text-size-adjust: 100%;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
        color-scheme: dark;
        background: #000;
        color: #fff;
    }
</style>
