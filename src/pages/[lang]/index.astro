---
import Layout from '../../layouts/Layout.astro';
import Home from '../../components/index/Home.astro';
import About from '../../components/index/About.astro';
import Education from '../../components/index/Education.astro';
import Experience from '../../components/index/Experience.astro';
import Project from '../../components/index/Projects.astro';
import Blog from '../../components/index/Blogs.astro';
import Portfolio from '../../components/index/Portfolio.astro';
import Contact from '../../components/index/Contact.astro';
import Firefly from '../../components/Firefly.astro';

import { getTranslations } from '../../locales';

export async function getStaticPaths() {
    return [{ params: { lang: 'en' } }, { params: { lang: 'vi' } }];
}

const { lang } = Astro.params;
const translations = await getTranslations(lang);
---

<Layout title={translations?.title}>
    <Firefly />
    <Home translations={translations} currentLang={lang} />
    <About translations={translations} currentLang={lang} />
    <Education translations={translations} currentLang={lang} />
    <Experience translations={translations} currentLang={lang} />
    <Project translations={translations} currentLang={lang} />
    <Blog translations={translations} currentLang={lang} />
    <Portfolio translations={translations} currentLang={lang} />
    <Contact translations={translations} currentLang={lang} />
</Layout>
